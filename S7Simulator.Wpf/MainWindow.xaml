<Window x:Class="S7Simulator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S7Simulator.Wpf"
        xmlns:vm="clr-namespace:S7Simulator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="S7 Simulator (S7-1200/1500)" Height="600" Width="900">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Command="{Binding ImportExcelCommand}" Content="导入 Excel (DB/Tags)" />
                <Separator/>
                <Button Command="{Binding LoadDbsCommand}" Content="刷新 DB 列表" />
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DB List -->
            <GroupBox Header="DB 列表 (双击查看详情)" Grid.Column="0" Margin="5">
                <ListView ItemsSource="{Binding DbList}" MouseDoubleClick="ListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="DB 号" DisplayMemberBinding="{Binding DbNumber}" Width="50"/>
                            <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="导入时间" DisplayMemberBinding="{Binding ImportedAt, StringFormat='MM-dd HH:mm'}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- Server Status / Logs (Placeholder) -->
            <GroupBox Header="服务器状态" Grid.Column="1" Margin="5">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding ServerStatus}" FontSize="16" FontWeight="Bold" Foreground="Green"/>
                    <TextBlock Text="支持功能: Read/Write Area (DB, M, I, Q)" Margin="0,10,0,0"/>
                    <TextBlock Text="注意: DB 必须先导入 Excel 定义结构才能访问" Foreground="Red"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>